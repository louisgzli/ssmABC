<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.CompanyDaoMapper">   <!-- 命名空间，名字严格与dao对应，只要不冲突即可 -->
<select id="findAll" resultType="model.Company">
  select * from company
</select>


  <insert id="saveOrUpdate" parameterType="model.Company">
    <selectKey keyProperty="count" resultType="int" order="BEFORE">
      select count(*) from company where id = #{id}
    </selectKey>
    <if test="count > 0">
      update company
      set company = #{company},staff = #{staff},type =#{type},area = #{area}
      where id = #{id}
    </if>
    <if test="count==0">
      insert into company (company,staff,type,area) values(#{company},#{staff},#{type},#{area})
    </if>
  </insert>
  <delete id="deleteById" parameterType="int">
    delete from company where id=#{id}
  </delete>
</mapper>
