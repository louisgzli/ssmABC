<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.EmployeeMapper">   <!-- 命名空间，名字严格与dao对应，只要不冲突即可 -->
    <select id="findAll" resultType="model.Employee">
  select * from employee
</select>


    <insert id="saveOrUpdate" parameterType="model.Employee">
        <selectKey keyProperty="count" resultType="int" order="BEFORE">
            select count(*) from employee where id = #{id}
        </selectKey>
        <if test="count > 0">
            update employee
            set name = #{name},age = #{age},company =#{company}
            where id = #{id}
        </if>
        <if test="count==0">
            insert into employee values(#{id}, #{name},#{age},#{company})
        </if>
    </insert>
    <delete id="deleteById" parameterType="int">
    delete from employee where id=#{id}
  </delete>
</mapper>
