<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.CommodityMapper">   <!-- 命名空间，名字严格与dao对应，只要不冲突即可 -->
    <select id="findAll" resultType="model.Commodity">
  select * from commodity
</select>


    <insert id="saveOrUpdate" parameterType="model.Commodity">
        <selectKey keyProperty="count" resultType="int" order="BEFORE">
            select count(*) from commodity where id = #{id}
        </selectKey>
        <if test="count > 0">
            update commodity
            set name = #{name},ptype = #{pType},atype =#{aType}
            where id = #{id}
        </if>
        <if test="count==0">
            insert into commodity values(#{id}, #{name},#{pType},#{aType})
        </if>
    </insert>

    <delete id="deleteById" parameterType="int">
    delete from commodity where id=#{id}
  </delete>
</mapper>
